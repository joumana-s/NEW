{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./", 
    "types": ["jasmine", "node"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "backend/src/**/*.ts",
    "backend/tests/**/*.ts",
    "spec/support/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend"
  ]
}
